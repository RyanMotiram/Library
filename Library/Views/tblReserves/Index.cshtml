@model IEnumerable<Library.Models.tblReserve>

@{
    ViewBag.Title = "Your Home Page";
}

    <h2>Your Home Page</h2>

*Note: You are only allowed 3 reservations and will either have to remove or wait until a reservation is expired

<p>
    @Html.ActionLink("Reserve a new book", "Index", "tblBooks")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.tblBook.Book_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Due_Date)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.tblBook.Book_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Due_Date)
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
